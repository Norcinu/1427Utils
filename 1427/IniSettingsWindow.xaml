<Window x:Class="PDTUtils.IniSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IniSettingsWindow" Height="136" Width="300" WindowStartupLocation="CenterScreen" FontStyle="Normal" FontWeight="Normal" FontSize="11" WindowStyle="ThreeDBorderWindow" Closing="Window_Closing">
    <Grid Height="94" FocusManager.FocusedElement="{Binding ElementName=txtNewValue}">
        <Label Height="23"   VerticalAlignment="Top" Margin="10,3,12,0" FontStretch="Normal" Name="lblText" Content="Enter new Item Value:"></Label>
        <Button Content="Set Value" Height="23" HorizontalAlignment="Left" Margin="12,63,0,0" Name="btnSave" VerticalAlignment="Top" Width="75" Click="btnSave_Click" IsDefault="False" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Right" Margin="0,63,12,0" Name="btnCancel" VerticalAlignment="Top" Width="75" Click="button2_Click" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,30,0,0" Name="txtNewValue" VerticalAlignment="Top" Width="254" />
    </Grid>
</Window>
