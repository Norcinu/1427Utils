<Window x:Class="PDTUtils.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="1427 Shell Utils" Height="600" Width="800" Name="WindowMain" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None">
    <!--<Grid Background="#FFC78585"></Grid>-->
    <Grid>
        <!-- Using default column and row configurations -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="ColumnOne"/>
            <ColumnDefinition Name="ColumnTwo"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Name="RowOne"/>
            <RowDefinition Name="RowTwo"/>
           <!-- <RowDefinition Name="RowThree"/>
            <RowDefinition Name="RowFour"/> -->
        </Grid.RowDefinitions>

        <!-- 2nd screenshot uses ColumnSpan and RowSpan -->
        <Label Name="lblTop"  Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Background="Red">Red 1</Label>
        <Label Name="lblLeft" Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" Background="LightGreen">Green 1</Label>
        <Label Name="lblRight" Grid.Column="1" Grid.Row="1" Grid.RowSpan="1" Background="LightBlue">Blue 1</Label>
        <!--<Label Grid.Column="1" Grid.Row="2" Grid.RowSpan="1" Background="Yellow">Yellow 1</Label>
        <Label Grid.Column="1" Grid.Row="3" Grid.RowSpan="1" Background="Salmon">Salmon 1</Label>-->
        <Button Content="Exit" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="25,25,25,25" Name="btnExit" Width="75" Grid.Column="0" Grid.Row="3" Click="btnExit_Click" />
        <Button Content="Games" Height="23" HorizontalAlignment="Left" Margin="25,43,0,0" Name="Games" VerticalAlignment="Top" Width="75" Grid.Row="1" />
        <Button Content="Hoppers" Height="23" HorizontalAlignment="Left" Margin="25,86,0,0" Name="btnHoppers" VerticalAlignment="Top" Width="75" Grid.Row="1" Click="btnHoppers_Click" />
        <Button Content="Logfiles" Height="23" HorizontalAlignment="Left" Margin="25,129,0,0" Name="btnLogfiles" VerticalAlignment="Top" Width="75" Grid.Row="1" Click="btnLogfiles_Click" />
        
        
        <TabControl TabStripPlacement="Top" Margin="0, 0, 0, 10" Grid.Row="1" Grid.Column="1" Width="400" Height="400" Visibility="Hidden" Name="MyTab">
            <TabItem Name="tabIitemContent" Header="Clear Hoppers">
                <StackPanel>
                    <Button Name="btnHopperOK" Content="_OK" Width="Auto" Click="btnHopperOK_Click" />
                    <Button Name="btnHopperCancel" Content="_Cancel" Width="Auto"/>
                </StackPanel>
            </TabItem>

            <TabItem Name="backgroundcolor" Header="Background">
                <TabItem.Content>Background property information goes here.</TabItem.Content>
            </TabItem>

            <TabItem Name="foregroundcolor" Header="Foreground">
                <TabItem.Content>Foreground property information goes here.</TabItem.Content>
            </TabItem>

            <TabItem Name="bordercolor" Header="BorderColor">
                <TabItem.Content>Border color property information goes here.</TabItem.Content>
            </TabItem>
        </TabControl>
    
    </Grid>

   
</Window>
