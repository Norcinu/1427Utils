<Window x:Class="PDTUtils.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="1427 Shell Utils" Height="600" Width="800" Name="WindowMain" WindowStyle="None" Loaded="WindowMain_Loaded" WindowState="Maximized" Closing="WindowMain_Closing" Foreground="#FF837C7C" Background="Black" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

   <!-- <Window.Resources>
        <ObjectDataProvider x:Key="MachineIniDataSource"
           ObjectType="{x:Type ds:PDTUtils.Logic.MachineIni}"/>
    </Window.Resources> -->
    
    <!--<Grid Background="#FFC78585"></Grid>-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="ColumnOne" Width="122*" />
            <ColumnDefinition Name="ColumnTwo" Width="656*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Name="RowOne" Height="82*" />
            <RowDefinition Name="RowTwo" Height="479*" />
            <RowDefinition Name="RowThree" Height="52*"/>
        </Grid.RowDefinitions>

        <Grid.Resources>
            <LinearGradientBrush x:Key="FunkyBrush">
                <GradientStop Color="Yellow" Offset="0" />
                <GradientStop Color="Navy" Offset="1" />
            </LinearGradientBrush>
        </Grid.Resources>
        <!-- Using default column and row configurations -->
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Name="ColumnOne" Width="0"/>  77 
            <ColumnDefinition Width="275*" /> 
            <ColumnDefinition Width="37*" /> 
            <ColumnDefinition Name="ColumnTwo" Width="87*" />
            <ColumnDefinition Width="588*" />
            <ColumnDefinition Width="41*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Name="RowOne" Height="224*" />
            <RowDefinition Height="56*" />
            <RowDefinition Name="RowTwo" Height="280*" />
            <RowDefinition Name="RowThree"/>
            <RowDefinition Name="RowFour"/> 
        </Grid.RowDefinitions>-->

        <!-- 2nd screenshot uses ColumnSpan and RowSpan -->
        <Label Name="lblTop" Background="#336699"  BorderBrush="Black" BorderThickness="2" Grid.ColumnSpan="2">Red 1</Label>
        <!--LightGoldenrodYellow"-->
        <!-- columnspan="5" -->
        <Label Name="lblLeft" Background="DimGray" BorderBrush="Black" BorderThickness="2" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="1" Margin="0,0,1,0" Grid.Column="0">Green 1</Label>
        <!--Background="LightGreen"-->
        <Label Name="lblRight" Background="DimGray" BorderBrush="Black" BorderThickness="2" Grid.Column="1" Grid.Row="1" Margin="0,0,0,47" Grid.RowSpan="2">Blue 1</Label>
        <Label Name="lblBottom" Background="#336699" BorderBrush="Black" BorderThickness="2" Grid.Row="2" Grid.Column="1" Height="48" VerticalAlignment="Bottom">Bottom 1</Label>
        <!--Background="LightBlue"-->
        <!--<Label Grid.Column="1" Grid.Row="2" Grid.RowSpan="1" Background="Yellow">Yellow 1</Label>
        <Label Grid.Column="1" Grid.Row="3" Grid.RowSpan="1" Background="Salmon">Salmon 1</Label>-->
        <Button Content="Exit" Background="{StaticResource FunkyBrush}" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="26,0,0,12" Name="btnExit" Width="75" Grid.Row="2" Click="btnExit_Click" />
        <Button Content="Games" Background="{StaticResource FunkyBrush}" Height="23" HorizontalAlignment="Left" Margin="26,45,0,0" Name="Games" VerticalAlignment="Top" Width="75" Grid.Row="1" Click="Games_Click" />
        <Button Content="Hoppers" Background="{StaticResource FunkyBrush}" Height="23" HorizontalAlignment="Left" Margin="26,94,0,0" Name="btnHoppers" VerticalAlignment="Top" Width="75" Grid.Row="1" Click="btnHoppers_Click" />
        <Button Content="Logfiles" Background="{StaticResource FunkyBrush}" Height="23" HorizontalAlignment="Left" Margin="26,143,0,0" Name="btnLogfiles" VerticalAlignment="Top" Width="75" Grid.Row="1" Click="btnLogfiles_Click" />
        <TabControl Name="settingsTab" TabStripPlacement="Top" Grid.Row="1" Grid.Column="1" Visibility="Hidden" SelectionChanged="Logfile_SelectionChanged" IsEnabled="False" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="18,6,56,60"></TabControl>
        <Label Grid.Column="2" Height="39" HorizontalAlignment="Right" Margin="0,12,0,0" Name="lblDoorStatus" VerticalAlignment="Top" Width="275" FontWeight="Bold" FontSize="26" FontFamily="Cambria" Content="Door Status : Closed" />
        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" Margin="0,6,0,0" Name="stpButtonPanel" VerticalAlignment="Top" Orientation="Horizontal" ScrollViewer.HorizontalScrollBarVisibility="Visible" />
        <Button Content="Button" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="26,399,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="modifySettingsButton_Click" />
        <Label Height="Auto" HorizontalAlignment="Left" Margin="292,12,0,0" Name="lblUptime" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" Width="Auto" FontSize="36" IsEnabled="False" Visibility="Collapsed" />
        <Button Content="Edit Machine Ini" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="12,359,0,0" Name="btnMachineIni" VerticalAlignment="Top" Width="89" Click="btnMachineIni_Click" />

        <ComboBox Width="100" Height="35" Name="MachineIniCategorys" IsEnabled="False" Visibility="Hidden"
                  ItemsSource="{Binding GetUniqueCategories}"
                  DisplayMemberPath="Category"
                  SelectedValuePath="Category"
                  SelectedValue="{Binding Category}" />
        
        <ListView ItemsSource="{Binding GetMachineIni}" Name="MachineIniListView" IsEnabled="False" Visibility="Hidden">
                <ListView.View>
                    <GridView AllowsColumnReorder="true"
                    ColumnHeaderToolTip="Machine INI config settings">
                        <GridViewColumn DisplayMemberBinding=
                                "{Binding Path=Category}" 
                            Header="Category" Width="150"/>

                        <GridViewColumn DisplayMemberBinding=
                                "{Binding Path=Field}" 
                            Header="Field"  Width="150" >
                        </GridViewColumn>

                        <GridViewColumn DisplayMemberBinding=
                                "{Binding Path=Value}" 
                            Header="Value" Width="450"/>
                    </GridView>

                </ListView.View>
        </ListView>
    </Grid>

   
</Window>
