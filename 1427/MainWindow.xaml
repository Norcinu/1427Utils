		<!-- System Info View -->

		<!-- <Border BorderThickness="5" Panel.ZIndex="5" BorderBrush="HotPink" Grid.Row="1" Grid.Column="1"> -->
			<StackPanel Orientation="Horizontal" Panel.ZIndex="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" IsEnabled="{Binding DockSystem.IsEnabled}"  Visibility="{Binding Path=Enabler.System, Converter={StaticResource BoolToVisConverter}}" Grid.Row="1" Grid.Column="1">
				<StackPanel HorizontalAlignment="Left">
					<ListBox IsEnabled="{Binding DockSystem.IsEnabled}" ItemsSource="{Binding MachineData}" FontSize="22" ScrollViewer.CanContentScroll="True"  ScrollViewer.HorizontalScrollBarVisibility="Visible" Margin="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
						<ListBox.ItemTemplate>
							<DataTemplate>
								<ListBoxItem Content="{Binding Field}"></ListBoxItem>
							</DataTemplate>
						</ListBox.ItemTemplate>
					</ListBox>
				</StackPanel>

				<StackPanel HorizontalAlignment="Right">
					<ListView ItemsSource="{Binding Path=GamesList.GamesInfo}" FontSize="22" Width="655" Height="400"  Margin="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
						<ListView.View>
							<GridView>
								<GridViewColumn Header="Game" DisplayMemberBinding="{Binding Path=Name}" Width="150"></GridViewColumn>
								<GridViewColumn Header="Executable Path" DisplayMemberBinding="{Binding Path=Path}" Width="250"></GridViewColumn>
								<GridViewColumn Header="MD5 Status" DisplayMemberBinding="{Binding Path=HashCode}" Width="254"></GridViewColumn>
