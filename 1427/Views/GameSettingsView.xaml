                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView> -->

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!--<Button Content="Load Game Settings" Width="200" Height="50" FontSize="24" Command="{Binding SetGameOptions}" Margin="10" />-->
                <Button Content="Save Changes" Width="200" Height="50" FontSize="24" Command="{Binding SaveGameOptions}" Margin="10,50,10,10" />
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
