<UserControl x:Class="PDTUtils.Views.GameSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid>
        <StackPanel> <!-- Main Stackpanel -->
            <ListView ItemsSource="{Binding Path=Models}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Game" /> <!-- might not need all this if it is handled by settingsview... -->
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel> <!-- Main Stackpanel -->
    </Grid>
</UserControl>
