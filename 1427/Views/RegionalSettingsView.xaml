                                <Image Source="D:/1525/bmp/up.png" Height="65" Width="65" />
                            </StackPanel>
                        </RepeatButton>

                        <StackPanel>
                            <Label Style="{StaticResource StdLabel}" BorderThickness="2,2,2,0" Margin="10,10,10,0">Machine RTP</Label>
                            <Label Style="{StaticResource StdLabel}" BorderThickness="2,0,2,2" Margin="10,0,10,10" Content="{Binding EditableLiveRegion.Rtp}"/>
                        </StackPanel>

                        <RepeatButton Height="75" Margin="0,10,0,10" Delay="500" Command="{Binding Decrement}" CommandParameter="RTP">
                            <StackPanel>
                                <Image Source="D:/1525/bmp/down.png" Height="65" Width="65" />
                            </StackPanel>
                        </RepeatButton>
                                                
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Margin="10" Height="35" BorderBrush="Black" BorderThickness="2" Style="{StaticResource StdHeaderLabel}" FontSize="18" HorizontalContentAlignment="Center">Load Region Default Settings:</Label>
                        <Button Height="35" Width="125" FontSize="24" Margin="10" Command="{Binding ResetLiveToDefault}">Default</Button>
                    </StackPanel> -->
                </StackPanel>
            </TabItem>

            <TabItem Header="Community Settings">
                <TabControl>
                    <TabItem Header="View" Width="150">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <ListView ItemsSource="{Binding SettingsView}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Key" Width="380"> 
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Label Style="{StaticResource StdHeaderLabel}" Background="LightGray" 
                                                           BorderBrush="Black" BorderThickness="2" Margin="10,2,10,2" FontSize="20" 
                                                           Content="{Binding Key}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Value" Width="380">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Label Style="{StaticResource StdHeaderLabel}" Background="LightGray" 
                                                           BorderBrush="Black" BorderThickness="2" Margin="10,2,10,2" FontSize="20" 
                                                           Content="{Binding Value}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </TabItem>
                    
                    <TabItem Header="Edit" Width="150">
                        <StackPanel HorizontalAlignment="Center" Background="LightGray" >

                            <Border BorderBrush="Black" BorderThickness="2" Background="LightBlue">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="25" Background="LightBlue">
                                    <Label Style="{StaticResource StdHeaderLabel}">Edit Region:</Label>
                                    <Label Style="{StaticResource StdHeaderLabel}" Content="{Binding Selected.Community}"></Label>
                                </StackPanel>
                            </Border>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <RepeatButton Height="75" Delay="500" Margin="0,10,0,10" Command="{Binding Increment}" CommandParameter="MaxCredits">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/up.png" Height="65" Width="65" />
                                    </StackPanel>
                                </RepeatButton>
                                <StackPanel>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,2,2,0" Margin="10,10,10,0">Max Credits</Label>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,0,2,2" Margin="10,0,10,10" Content="{Binding EditableLiveRegion.MaxCredits}" />
                                </StackPanel>
                                <RepeatButton Height="75" Delay="500" Margin="0,10,0,10" Command="{Binding Decrement}" CommandParameter="MaxCredits">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/down.png" Height="65" Width="65" />
                                    </StackPanel>
                                </RepeatButton>

                                <RepeatButton Height="75" Delay="500" Margin="45,10,0,10" Command="{Binding Increment}" CommandParameter="MaxReserve">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/up.png" Height="65" Width="65" />
                                    </StackPanel>
                                </RepeatButton>
                                <StackPanel>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,2,2,0" Margin="10,10,10,0">Max Reserve</Label>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,0,2,2" Margin="10,0,10,10" Content="{Binding EditableLiveRegion.MaxReserveCredits}"/>
                                </StackPanel>

                                <RepeatButton Height="75" Delay="500" Margin="0,10,0,10" Command="{Binding Decrement}" CommandParameter="MaxReserve">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/down.png" Height="65" Width="65" />
                                    </StackPanel>
                                </RepeatButton>

                                <RepeatButton Height="75" Delay="500" Margin="45,10,0,10" Command="{Binding Increment}" CommandParameter="MaxBank">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/up.png" Height="65" Width="65" />
                                    </StackPanel>
                                </RepeatButton>
                                <StackPanel>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,2,2,0" Margin="10,10,10,0">Max Bank</Label>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,0,2,2" Margin="10,0,10,10" Content="{Binding EditableLiveRegion.MaxBank}" />
                                </StackPanel>
                                <RepeatButton Height="75" Delay="500" Margin="0,10,0,10" Command="{Binding Decrement}" CommandParameter="MaxBank">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/down.png" Height="65" Width="65" />
                                    </StackPanel>
                                </RepeatButton>
                            </StackPanel>


                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <RepeatButton Height="75" Delay="500" Margin="0,10,0,10" Command="{Binding Increment}" CommandParameter="GameTime">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/up.png" Height="65" Width="65" />
                                    </StackPanel>
                                </RepeatButton>
                                <StackPanel>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,2,2,0" Margin="10,10,10,0">Game Time</Label>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,0,2,2" Margin="10,0,10,10" Content="{Binding EditableLiveRegion.GameTime}" />
                                </StackPanel>
                                <RepeatButton Height="75" Delay="500" Margin="0,10,0,10" Command="{Binding Decrement}" CommandParameter="GameTime">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/down.png" Height="65" Width="65" />
                                    </StackPanel>
                                </RepeatButton>

                                <RepeatButton Height="75" Delay="500" Margin="45,10,0,10" Command="{Binding Increment}" CommandParameter="RTP">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/up.png" Height="65" Width="65" />
                                    </StackPanel>
                                </RepeatButton>
                                <StackPanel>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,2,2,0" Margin="10,10,10,0">Machine RTP</Label>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,0,2,2" Margin="10,0,10,10" Content="{Binding EditableLiveRegion.Rtp}"/>
                                </StackPanel>

                                <RepeatButton Height="75" Delay="500" Margin="0,10,0,10" Command="{Binding Decrement}" CommandParameter="RTP">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/down.png" Height="65" Width="65" />
                                    </StackPanel>
                                </RepeatButton>

                                <RepeatButton Height="75" Delay="500" Margin="45,10,0,10" Command="{Binding Increment}" CommandParameter="Cycle">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/up.png" Height="65" Width="65" />
                                    </StackPanel>
                                </RepeatButton>
                                <StackPanel>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,2,2,0" Margin="10,10,10,0">Cycle</Label>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,0,2,2" Margin="10,0,10,10" Content="{Binding EditableLiveRegion.CycleSize}" />
                                </StackPanel>
                                <RepeatButton Height="75" Delay="500" Margin="0,10,0,10" Command="{Binding Decrement}" CommandParameter="Cycle">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/down.png" Height="65" Width="65" />
                                    </StackPanel>
                                </RepeatButton>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Height="75" Margin="0,10,0,10" Command="{Binding SetFastTransfer}" CommandParameter="Enable">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/enable.png" Height="65" Width="65" />
                                    </StackPanel>
                                </Button>

                                <StackPanel>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,2,2,0" Margin="10,10,10,0">Fast Transfer</Label>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,0,2,2" Margin="10,0,10,10" Content="{Binding EditableLiveRegion.FastTransfer}" />
                                </StackPanel>

                                <Button Height="75" Margin="0,10,0,10" Command="{Binding SetFastTransfer}" CommandParameter="Disable">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/disable.png" Height="65" Width="65" />
                                    </StackPanel>
                                </Button>

                                <Button Height="75" Margin="45,10,0,10" Command="{Binding SetExtendedOption}" CommandParameter="AutoTransfer+Enable">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/enable.png" Height="65" Width="65" />
                                    </StackPanel>
                                </Button>

                                <StackPanel>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,2,2,0" Margin="10,10,10,0">Set Auto Transfer</Label>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,0,2,2" Margin="10,0,10,10" Content="{Binding AutoTransferStake}" />
                                </StackPanel>

                                <Button Height="75" Margin="0,10,0,10" Command="{Binding SetExtendedOption}" CommandParameter="AutoTransfer+Disable">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/disable.png" Height="65" Width="65" />
                                    </StackPanel>
                                </Button>


                                <Button Height="75" Margin="45,10,0,10" Command="{Binding SetEscrow}" CommandParameter="Enable">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/enable.png" Height="65" Width="65" />
                                    </StackPanel>
                                </Button>

                                <StackPanel>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,2,2,0" Margin="10,10,10,0">Escrow State</Label>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,0,2,2" Margin="10,0,10,10" Content="{Binding EditableLiveRegion.EscrowState}" />
                                </StackPanel>

                                <Button Height="75" Margin="0,10,0,10" Command="{Binding SetEscrow}" CommandParameter="Disable">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/disable.png" Height="65" Width="65" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Height="75" Margin="0,10,0,10" Command="{Binding SetExtendedOption}" CommandParameter="AllowFish+Enable">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/enable.png" Height="65" Width="65" />
                                    </StackPanel>
                                </Button>

                                <StackPanel>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,2,2,0" Margin="10,10,10,0">Fichas Only</Label>
                                    <Label Style="{StaticResource StdLabel}" BorderThickness="2,0,2,2" Margin="10,0,10,10" Content="{Binding AlwaysFichas}" />
                                </StackPanel>

                                <Button Height="75" Margin="0,10,0,10" Command="{Binding SetExtendedOption}" CommandParameter="AllowFish+Disable">
                                    <StackPanel>
                                        <Image Source="D:/1525/bmp/disable.png" Height="65" Width="65" />
                                    </StackPanel>
                                </Button>
                                
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Label Margin="10" Height="35" BorderBrush="Black" BorderThickness="2" Style="{StaticResource StdHeaderLabel}" FontSize="18" HorizontalContentAlignment="Center">Load Region Default Settings:</Label>
                                    <Button Height="35" Width="125" FontSize="24" Margin="10" Command="{Binding ResetLiveToDefault}">Default</Button>
                                <!--<Button Content="Save Changes" Margin="25" FontSize="20" Width="150" Height="35" Command="{Binding Save}"/>-->
                                <!--<Button Content="Cancel" Margin="25" FontSize="20" Width="150" Height="35" />-->
                            </StackPanel>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
