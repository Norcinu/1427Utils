        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <Label Style="{StaticResource StdHeaderLabel}" BorderBrush="Black" BorderThickness="2"  Content="{Binding Path=Selected.Community, StringFormat=Your Current Region is: {0} }" FontSize="28" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Style="{StaticResource StdHeaderLabel}" Content="{Binding Path=Selected.VenueType, StringFormat=Venue Type is: {0}}" FontSize="28" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <Label Style="{StaticResource StdHeaderLabel}" Content=" - Reboot Required" FontSize="28" Margin="-20,10,10,10" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="{Binding SelectionChanged}"
                           Visibility="{Binding SelectionChanged, Converter={StaticResource BoolToVisConverter}}"/>
            </StackPanel>


            <StackPanel HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Name="RowOne" Height="380" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Name="ColumnOne" Width="430" />
                        <ColumnDefinition Name="ColumnTwo" Width="430" />
                    </Grid.ColumnDefinitions>
                    
                    <ListView x:Name="LvStreetMarkets" ItemsSource="{Binding Street}" Margin="25" Grid.Column="0" Tag="1" SelectedIndex="{Binding MarketSelectedIndex}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Street Market - Community" DisplayMemberBinding="{Binding Community}" Width="380"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    
                    <ListView x:Name="LvArcades" ItemsSource="{Binding Arcades}" Margin="25" Grid.Column="1" Grid.Row="0" Tag="2" SelectedIndex="{Binding ArcadeSelectedIndex}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Arcade - Community" DisplayMemberBinding="{Binding Community}" Width="380"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </StackPanel>
            
